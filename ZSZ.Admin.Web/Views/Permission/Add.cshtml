@*@model ZSZ.DTO.PermissionDTO[]*@
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form>
    名称：<input type="text" name="name" id="name" /><br />
    描述：<input type="text" name="description" id="description" /><br />
    <input type="button" name="保存" id="btnAdd" value="保存" />
</form>
@section FooterScript
{
    <script type="text/javascript">
        $("#btnAdd").click(
            function () {
                $.ajax({
                    url:"/Permission/Add",
                    type: "post",
                    data: { name: $("#name").val(), description: $("#description").val() },
                    dataType: "json",
                    success: function (res)
                    {
                        if (res.status == "ok")
                        {                            
                            parent.location.reload();
                        }
                        else
                        {
                            alert("error");
                        }
                    },
                    error: function () {
                        alert("请求出错");
                    }
                });
            });
    </script>
}