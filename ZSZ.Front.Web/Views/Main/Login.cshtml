@section FooterScript
{
    <script type="text/javascript">
        $(function () {
            $("#btnLogin").click(function ()
            {
                $.ajax({
                    url: "/Main/Login",
                    dataType: "json", type: "post",
                    data: { phoneNum: $("#phoneNum").val(), password: $("#password").val() },
                    success: function (res) {
                        if(res.status=="ok")
                        {
                            //alert("登录成功");
                            location.href = "/Main/Index";
                        }
                        else
                        {
                            alert(res.errorMsg);
                        }
                    },error: function ()
                    {
                        alert("网络请求错误");
                    }
                });
            });
        });
